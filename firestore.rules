
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- User Data ---

    // A user can read and write their own profile document.
    // Only the platform owner can list all user profiles.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow list: if request.auth.token.email != null && request.auth.token.email.lower() == 'rentapog@gmail.com';
    }

    // A user can read and write their own subscription documents.
    match /users/{userId}/subscriptions/{subscriptionId} {
      allow read, write: if request.auth.uid == userId;
    }

    // A user can READ (get, list) their own referrals.
    // A new user can CREATE a referral doc for their referrer during signup.
    // The referred user can UPDATE the record (e.g., to change activation status).
    // The platform owner can also create/update for administrative purposes.
    match /users/{userId}/referrals/{referralId} {
      allow get, list: if request.auth.uid == userId;
      allow create: if (request.auth.uid == request.resource.data.referredUserId) || (request.auth.token.email != null && request.auth.token.email.lower() == 'rentapog@gmail.com');
      allow update: if (request.auth.uid == resource.data.referredUserId) || (request.auth.token.email != null && request.auth.token.email.lower() == 'rentapog@gmail.com');
      allow delete: if false; // Protect integrity
    }

    // A user can READ their own payments. Only the platform owner can WRITE payments for all users (for payouts).
    match /users/{userId}/payments/{paymentId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.token.email != null && request.auth.token.email.lower() == 'rentapog@gmail.com';
    }

    // A user can CREATE and READ their own refund requests. Only the platform owner can manage all requests.
    match /users/{userId}/refundRequests/{requestId} {
      allow read, create: if request.auth.uid == userId;
      allow update, delete: if request.auth.token.email != null && request.auth.token.email.lower() == 'rentapog@gmail.com';
    }

    // A user can manage their own generated content.
    match /users/{userId}/content/{contentId} {
      allow read, write: if request.auth.uid == userId;
    }


    // --- Public Data & Roles ---

    // Usernames are public for single GET requests.
    // A user can CREATE their own username mapping.
    // The platform owner can also update usernames.
    match /usernames/{username} {
      allow get: if true;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow update: if (request.auth != null && request.resource.data.uid == request.auth.uid) || (request.auth.token.email != null && request.auth.token.email.lower() == 'rentapog@gmail.com');
      allow list, delete: if false;
    }

    // Subscription Tiers are public and read-only for all users.
    match /subscriptionTiers/{subscriptionTierId} {
      allow get, list: if true;
      allow write: if false;
    }

    // Only the platform owner can write admin roles.
    // Any user can read their own role document to check their status.
    match /roles_admin/{userId} {
      allow read: if request.auth.uid == userId || (request.auth.token.email != null && request.auth.token.email.lower() == 'rentapog@gmail.com');
      allow write: if request.auth.token.email != null && request.auth.token.email.lower() == 'rentapog@gmail.com';
    }


    // --- Collection Group Queries for Admin Panel ---

    // Only the platform owner can list all referrals across all users.
    match /{path=**}/referrals/{referralId} {
        allow list: if request.auth.token.email != null && request.auth.token.email.lower() == 'rentapog@gmail.com';
    }

    // Only the platform owner can list all refund requests across all users.
    match /{path=**}/refundRequests/{requestId} {
        allow list: if request.auth.token.email != null && request.auth.token.email.lower() == 'rentapog@gmail.com';
    }
  }
}
