
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * This ruleset prioritizes clear, direct user ownership. A user can always
     * manage data under their own `/users/{userId}` path. Rules have been
     * standardized to a simple `read, write` pattern for owned data to ensure
     * compatibility with real-time listeners.
     */

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // =====================================================================
    // Collection Rules
    // =====================================================================

    /**
     * @description Controls access to user profile documents and their subcollections.
     */
    match /users/{userId} {
      // Users can read and write their own profile and associated data.
      allow read, write: if request.auth.uid == userId;
      allow list: if isAdmin(); // Admins can list users.

      /**
       * @description Manages a user's subscriptions.
       */
      match /subscriptions/{subscriptionId} {
        allow read, write: if request.auth.uid == userId;
      }

      /**
       * @description Stores referrals made by a user.
       * A new user can create a referral in their referrer's subcollection.
       */
      match /referrals/{referralId} {
        allow read, write: if request.auth.uid == userId;
        allow create: if isSignedIn()
                        && request.resource.data.referredUserId == request.auth.uid
                        && request.resource.data.triggeringUserReferredBy == userId;
      }
      
      /**
       * @description Contains payment history for a user.
       */
      match /payments/{paymentId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
      }

      /**
       * @description Stores a user's refund requests.
       */
      match /refundRequests/{requestId} {
        allow read, create: if request.auth.uid == userId;
        allow update, delete: if isAdmin();
      }
    }
    
    /**
     * @description Publicly maps usernames to UIDs for referral lookups.
     */
    match /usernames/{username} {
      allow get: if true;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow list, update, delete: if false;
    }

    /**
     * @description Publicly readable subscription tier definitions.
     */
    match /subscriptionTiers/{subscriptionTierId} {
      allow get, list: if true;
      allow write: if false;
    }
    
    /**
     * @description Lookup collection for admin roles. Standardized to the
     * same ownership rule as other user data for consistency.
     */
    match /roles_admin/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow list: if false;
    }

    // =====================================================================
    // Collection Group Queries for Admins
    // =====================================================================
    
    match /{path=**}/referrals/{referralId} {
        allow list: if isAdmin();
    }

    match /{path=**}/refundRequests/{requestId} {
        allow list: if isAdmin();
    }
  }
}
