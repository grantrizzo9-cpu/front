
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Core Philosophy: This ruleset enforces a strict user-ownership model, where
     * all user-generated data (subscriptions, referrals, etc.) is stored in
     * subcollections under that user's own document. This approach simplifies
     * security logic by tying access control directly to the document path. A
     * database-based admin role is implemented via the `/roles_admin`
     * collection, granting admins specific oversight over payments and commissions.
     *
     * Key Security Decisions:
     * - User data is strictly segregated. Users can only access documents within
     *   their own `/users/{userId}` path. Listing other users is disallowed.
     * - An `isAdmin()` function checks for a document in `/roles_admin` to grant
     *   elevated privileges.
     * - The referral system works via a special rule that allows a new user to
     *   write into their referrer's `referrals` subcollection. This is secured
     *   by checking data in the write request itself, avoiding complex `get()` calls.
     */

    // =====================================================================
    // Helper Functions
    // =====================================================================

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // =====================================================================
    // Collection Rules
    // =====================================================================

    /**
     * @description Controls access to user profile documents.
     */
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId && request.resource.data.id == userId;
      allow update: if isSignedIn() && request.auth.uid == userId && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && request.auth.uid == userId;

      /**
       * @description Manages user subscriptions, nested under the user's document.
       */
      match /subscriptions/{subscriptionId} {
        allow read, create, update, delete: if isSignedIn() && request.auth.uid == userId;
      }

      /**
       * @description Stores referrals made by a user (the referrer).
       * @principle A newly signed-up user can securely write to their referrer's subcollection.
       * The rule validates this by checking properties within the written data itself, avoiding
       * complex and potentially problematic `get()` calls.
       */
      match /referrals/{referralId} {
        allow read: if isSignedIn() && request.auth.uid == userId;
        allow update, delete: if isSignedIn() && request.auth.uid == userId;
        allow create: if isSignedIn()
                        && request.resource.data.referredUserId == request.auth.uid
                        && request.resource.data.triggeringUserReferredBy == userId;
      }
      
      /**
       * @description Contains payment history for a user, accessible by the user and admins.
       */
      match /payments/{paymentId} {
        allow read, create, update, delete: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      }

      /**
       * @description Stores a user's refund requests. Path-based ownership.
       */
      match /refundRequests/{requestId} {
        allow read, create: if isSignedIn() && request.auth.uid == userId;
        allow update: if isAdmin();
        allow delete: if isAdmin();
      }
    }
    
    /**
     * @description Publicly maps usernames to UIDs to facilitate referral lookups.
     * @principle Simplifies referral resolution. The create rule is simplified to
     * avoid `get()` calls, reducing complexity and potential timing issues during signup.
     */
    match /usernames/{username} {
      allow get: if true;
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Defines subscription tiers. Publicly readable.
     */
    match /subscriptionTiers/{subscriptionTierId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
    
    /**
     * @description Allows admins to query across all referral subcollections
     * for platform-wide reporting. This is a collection group query rule.
     */
    match /{path=**}/referrals/{referralId} {
        allow list: if isAdmin();
    }

    /**
     * @description Allows admins to query across all refundRequest subcollections
     * for platform-wide reporting. This is a collection group query rule.
     */
    match /{path=**}/refundRequests/{requestId} {
        allow list: if isAdmin();
    }
    
    /**
     * @description Lookup collection for admin roles. Existence of a doc grants admin rights.
     */
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow list, update, delete: if false;
    }
  }
}
