rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- User Data ---

    // A user can read and write their own profile document.
    // An admin can list all user profiles.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow list: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // A user can read and write their own subscription documents.
    match /users/{userId}/subscriptions/{subscriptionId} {
      allow read, write: if request.auth.uid == userId;
    }

    // A user can READ (get, list) their own referrals.
    // A newly signed-up user can CREATE a referral in their referrer's subcollection.
    // Update/delete is disallowed for non-admins to protect integrity.
    match /users/{userId}/referrals/{referralId} {
      allow get, list: if request.auth.uid == userId;
      allow create: if request.auth != null
                      && request.resource.data.referredUserId == request.auth.uid
                      && request.resource.data.triggeringUserReferredBy == userId;
    }

    // A user can READ their own payments. Admins can WRITE payments for all users (for payouts).
    match /users/{userId}/payments/{paymentId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // A user can CREATE and READ their own refund requests. Admins can manage all requests.
    match /users/{userId}/refundRequests/{requestId} {
      allow read, create: if request.auth.uid == userId;
      allow update, delete: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }


    // --- Public Data & Roles ---

    // Usernames are public for single GET requests to facilitate referrals.
    // A user can only CREATE their own username mapping. Listing/updating is disallowed.
    match /usernames/{username} {
      allow get: if true;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow list, update, delete: if false;
    }

    // Subscription Tiers are public and read-only for all users.
    match /subscriptionTiers/{subscriptionTierId} {
      allow get, list: if true;
      allow write: if false;
    }

    // A user can read their own role document to check for admin status.
    // The user can also write to it to grant themselves admin (as per UI in settings).
    match /roles_admin/{userId} {
      allow read, write: if request.auth.uid == userId;
    }


    // --- Collection Group Queries for Admin Panel ---

    // Admins can list all referrals across all users for the admin dashboard.
    match /{path=**}/referrals/{referralId} {
        allow list: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Admins can list all refund requests across all users for the admin dashboard.
    match /{path=**}/refundRequests/{requestId} {
        allow list: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}
